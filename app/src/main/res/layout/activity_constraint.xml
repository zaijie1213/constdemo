<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kaixi.constraintlayoutdemo.ConstraintActivity">

    <TextView
        android:text="更新于12：30"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="10dp"
        />

    <ImageView
        android:src="@mipmap/ic_launcher"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintRight_toLeftOf="@+id/textView2"
        android:id="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="18°"
        android:textSize="50dp"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="166dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"/>

    <TextView
        android:gravity="center"
        android:id="@+id/textView6"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        android:text="17°"
        app:layout_constraintRight_toLeftOf="@+id/textView7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"/>

    <TextView
        android:gravity="center"
        android:id="@+id/textView7"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        android:text="17°"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="199dp"
        app:layout_constraintRight_toLeftOf="@+id/textView8"
        app:layout_constraintLeft_toRightOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="@+id/textView6"/>

    <TextView

        android:gravity="center"
        android:id="@+id/textView8"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        android:text="17°"
        tools:layout_editor_absoluteX="186dp"
        tools:layout_editor_absoluteY="201dp"
        app:layout_constraintLeft_toRightOf="@+id/textView7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView7"/>

    <TextView
        android:gravity="center"
        android:id="@+id/textView9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="体感"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/textView10"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView8"/>

    <TextView
        android:gravity="center"
        android:id="@+id/textView10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="体感"
        app:layout_constraintHorizontal_weight="1"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="199dp"
        app:layout_constraintRight_toLeftOf="@+id/textView11"
        app:layout_constraintLeft_toRightOf="@+id/textView9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="@+id/textView9"/>

    <TextView
        android:gravity="center"
        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/textView11"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="体感"
        tools:layout_editor_absoluteX="186dp"
        tools:layout_editor_absoluteY="201dp"
        app:layout_constraintLeft_toRightOf="@+id/textView10"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView10"/>


</android.support.constraint.ConstraintLayout>
